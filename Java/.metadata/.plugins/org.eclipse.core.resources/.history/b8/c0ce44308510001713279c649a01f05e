	private JLabel lblGameSum, lblWins, lblLose, lblRemis;
	private JLabel lblGameSum2, lblWins2, lblLose2, lblRemis2;
	private JButton btnReset, btnEnd; 
	private JPanel pnlStatic, pnlSouth;
	
	public StatisticFrame(){
